<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cendra.prayogo.pklmobile2">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="PKL Mobile"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".CatalogActivity" />
        <activity android:name=".ProductDetailActivity" />
        <activity android:name=".TransactionActivity" />
        <activity android:name=".TransactionDetailActivity" />
        <activity android:name=".RecapActivity" />
        <activity android:name=".SplashOutActivity" />
    </application>

</manifest>